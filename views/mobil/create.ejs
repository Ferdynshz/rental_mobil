<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Tambah Mobil</title>
  <!-- Bootstrap CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light bg-gradient">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card border-start border-4 border-success shadow-lg">
          <div class="card-body">
            <h2 class="card-title mb-4 text-success">Tambah Mobil</h2>
            <form method="post" action="/mobil/create">
              <!-- ID Mobil -->
              <div class="form-floating mb-3">
                <input type="number" name="id" id="id" class="form-control" placeholder="ID Mobil" required>
                <label for="id">ID Mobil</label>
              </div>
              <!-- Merk -->
              <div class="form-floating mb-3">
                <input type="text" name="merk" id="merk" class="form-control" placeholder="Merk Mobil" required>
                <label for="merk">Merk Mobil</label>
              </div>
              <!-- Spesifikasi -->
              <div class="form-floating mb-3">
                <input type="text" name="spesifikasi" id="spesifikasi" class="form-control" placeholder="Spesifikasi" required>
                <label for="spesifikasi">Spesifikasi</label>
              </div>
              <!-- Tahun -->
              <div class="form-floating mb-3">
                <input type="number" name="tahun" id="tahun" class="form-control" placeholder="Tahun" required>
                <label for="tahun">Tahun</label>
              </div>
              <!-- Nomor Polisi -->
              <div class="form-floating mb-3">
                <input type="text" name="nomor_polisi" id="nomor_polisi" class="form-control" placeholder="Nomor Polisi" required>
                <label for="nomor_polisi">Nomor Polisi</label>
              </div>
              <!-- Harga Sewa -->
              <div class="form-floating mb-4">
                <input type="number" name="harga_sewa" id="harga_sewa" class="form-control" placeholder="Harga Sewa per Hari" required>
                <label for="harga_sewa">Harga Sewa per Hari</label>
              </div>
              <!-- Tombol -->
              <div class="d-grid">
                <button type="submit" class="btn btn-outline-success btn-lg">Simpan Mobil</button>
              </div>
            </form>
          </div>
        </div>
        <div class="text-center mt-3">
          <a href="/mobil" class="text-decoration-none text-secondary">&larr; Kembali ke Daftar Mobil</a>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
