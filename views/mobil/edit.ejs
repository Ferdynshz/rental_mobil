<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Mobil</title>
    <!-- Bootstrap CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light bg-gradient">
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card border-start border-4 border-warning shadow-lg">
            <div class="card-body">
              <h2 class="card-title mb-4 text-warning">Edit Mobil</h2>

              <!-- FORM START -->
              <form method="POST" action="/mobil/<%= mobil.idMobil %>/edit">
                <!-- Simulasi PUT method -->
                <input type="hidden" name="_method" value="PUT" />

                <!-- ID Mobil (readonly) -->
                <div class="form-floating mb-3">
                  <input
                    type="number"
                    name="idMobil"
                    id="idMobil"
                    class="form-control"
                    value="<%= mobil.idMobil %>"
                    readonly
                  />
                  <label for="idMobil">ID Mobil</label>
                </div>

                <!-- Merk -->
                <div class="form-floating mb-3">
                  <input
                    type="text"
                    name="merk"
                    id="merk"
                    class="form-control"
                    value="<%= mobil.merk %>"
                    required
                  />
                  <label for="merk">Merk Mobil</label>
                </div>

                <!-- Spesifikasi -->
                <div class="form-floating mb-3">
                  <input
                    type="text"
                    name="spesifikasi"
                    id="spesifikasi"
                    class="form-control"
                    value="<%= mobil.spesifikasi %>"
                    required
                  />
                  <label for="spesifikasi">Spesifikasi</label>
                </div>

                <!-- Tahun -->
                <div class="form-floating mb-3">
                  <input
                    type="number"
                    name="tahun"
                    id="tahun"
                    class="form-control"
                    value="<%= mobil.tahun %>"
                    required
                  />
                  <label for="tahun">Tahun</label>
                </div>

                <!-- Nomor Polisi -->
                <div class="form-floating mb-3">
                  <input
                    type="text"
                    name="nomorPolisi"
                    id="nomorPolisi"
                    class="form-control"
                    value="<%= mobil.nomorPolisi %>"
                    required
                  />
                  <label for="nomorPolisi">Nomor Polisi</label>
                </div>

                <!-- Harga Sewa -->
                <div class="form-floating mb-4">
                  <input
                    type="number"
                    name="hargaSewaPerHari"
                    id="hargaSewaPerHari"
                    class="form-control"
                    value="<%= mobil.hargaSewaPerHari %>"
                    required
                  />
                  <label for="hargaSewaPerHari">Harga Sewa per Hari</label>
                </div>

                <!-- Submit -->
                <div class="d-grid">
                  <button type="submit" class="btn btn-outline-warning btn-lg">
                    Perbarui Mobil
                  </button>
                </div>
              </form>
              <!-- FORM END -->
            </div>
          </div>

          <!-- Link kembali -->
          <div class="text-center mt-3">
            <a href="/mobil" class="text-decoration-none text-secondary">
              &larr; Kembali ke Daftar Mobil
            </a>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
