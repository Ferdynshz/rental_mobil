<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Daftar Mobil</title>
  <!-- Bootstrap CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="h3">Daftar Mobil</h1>
      <a href="/mobil/create" class="btn btn-primary">Tambah Mobil</a>
    </div>

    <table class="table table-bordered table-striped">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Merk</th>
          <th>Tahun</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% mobils.forEach(mobil => { %>
          <tr>
            <td><%= mobil.id %></td>
            <td>
              <a href="/mobil/<%= mobil.id %>" class="text-decoration-none">
                <%= mobil.merk %>
              </a>
            </td>
            <td><%= mobil.tahun %></td>
            <td>
              <a href="/mobil/<%= mobil.id %>/edit" class="btn btn-sm btn-warning">Edit</a>
              <form action="/mobil/<%= mobil.id %>/delete" method="post" class="d-inline">
                <button type="submit" class="btn btn-sm btn-danger">Hapus</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <a href="/" class="btn btn-secondary">Kembali ke Beranda</a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
