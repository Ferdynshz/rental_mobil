<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Tambah Transaksi</title>
  <!-- Bootstrap CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-4">
    <h1 class="mb-4">Tambah Transaksi</h1>
    <form method="post" action="/transaksi/create" class="card p-4 shadow-sm">
      <div class="mb-3">
        <label class="form-label">Mobil</label>
        <select name="mobilId" class="form-select" required>
          <% mobils.forEach(m => { %>
            <option value="<%= m.id %>"><%= m.merk %></option>
          <% }) %>
        </select>
      </div>
      <div class="mb-3">
        <label class="form-label">Penyewa</label>
        <select name="penyewaId" class="form-select" required>
          <% penyewas.forEach(p => { %>
            <option value="<%= p.id %>"><%= p.nama %></option>
          <% }) %>
        </select>
      </div>
      <div class="mb-3">
        <label class="form-label">Tanggal Sewa</label>
        <input type="date" name="tanggalSewa" class="form-control" required />
      </div>
      <div class="mb-3">
        <label class="form-label">Tanggal Kembali</label>
        <input type="date" name="tanggalKembali" class="form-control" required />
      </div>
      <div class="d-flex justify-content-between">
        <a href="/transaksi" class="btn btn-secondary">Batal</a>
        <button type="submit" class="btn btn-primary">Simpan</button>
      </div>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
