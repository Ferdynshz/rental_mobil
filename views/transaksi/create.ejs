<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tambah Transaksi</title>
    <!-- Bootstrap CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light">
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
          <div class="card shadow-lg border-0 rounded-4">
            <div
              class="card-header bg-primary text-white text-center rounded-top-4"
            >
              <h4 class="mb-0">Tambah Transaksi</h4>
            </div>
            <div class="card-body px-4 py-5">
              <form method="post" action="/transaksi/create">
                <div class="mb-3">
                  <label class="form-label fw-semibold">Mobil</label>
                  <select name="mobilId" class="form-select" required>
                     <% if (Array.isArray(mobils)) { %>
                      <% mobils.forEach(m => { %>
                        <option value="<%= m.id %>"><%= m.merk %></option>
                      <% }) %>
                    <% } else { %>
                      <option disabled>Data mobil tidak tersedia</option>
                    <% } %>
                  </select>
                  <label class="form-label fw-semibold">Penyewa</label>
                  <select name="penyewaId" class="form-select" required>
                    <% if (Array.isArray(penyewas)) { %>
                      <% penyewas.forEach(p => { %>
                        <option value="<%= p.id %>"><%= p.nama %></option>
                      <% }) %>
                    <% } else { %>
                      <option disabled>Data penyewa tidak tersedia</option>
                    <% } %>
                  </select>

                </div>

                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold">Tanggal Sewa</label>
                    <input
                      type="date"
                      name="tanggalSewa"
                      class="form-control"
                      required
                    />
                  </div>
                  <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold"
                      >Tanggal Kembali</label
                    >
                    <input
                      type="date"
                      name="tanggalKembali"
                      class="form-control"
                      required
                    />
                  </div>
                </div>

                <div class="mb-3">
                  <label class="form-label fw-semibold">Lama Sewa</label>
                  <input
                    type="text"
                    name="lamaSewa"
                    class="form-control"
                    placeholder="Contoh: 3 hari"
                    required
                  />
                </div>

                <div class="mb-4">
                  <label class="form-label fw-semibold">Total Biaya</label>
                  <input
                    type="text"
                    name="totalBiaya"
                    class="form-control"
                    placeholder="Contoh: 300000"
                    required
                  />
                </div>

                <div class="d-flex justify-content-between">
                  <a href="/transaksi" class="btn btn-outline-secondary"
                    >Batal</a
                  >
                  <button type="submit" class="btn btn-primary">Simpan</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
