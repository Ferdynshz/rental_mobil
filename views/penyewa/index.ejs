<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Daftar Penyewa</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light bg-gradient">
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-lg-10">
          <div class="card border-start border-4 border-primary shadow-lg">
            <div class="card-body">
              <div
                class="d-flex justify-content-between align-items-center mb-4"
              >
                <h2 class="card-title text-primary mb-0">Daftar Penyewa</h2>
                <a href="/penyewa/create" class="btn btn-outline-primary">
                  + Tambah Penyewa
                </a>
              </div>

              <table class="table table-bordered table-striped align-middle">
                <thead class="table-dark">
                  <tr>
                    <th>ID</th>
                    <th>Nama</th>
                    <th>Alamat</th>
                    <th>Nomor Telepon</th>
                    <th class="text-center">Aksi</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (penyewas.length === 0) { %>
                  <tr>
                    <td colspan="5" class="text-center text-muted">
                      Belum ada data penyewa.
                    </td>
                  </tr>
                  <% } else { %> <% penyewas.forEach(p => { %>
                  <tr>
                    <td><%= p.idPenyewa %></td>
                    <td>
                      <a
                        href="/penyewa/<%= p.idPenyewa %>"
                        class="text-decoration-none"
                        ><%= p.nama %></a
                      >
                    </td>
                    <td><%= p.alamat %></td>
                    <td><%= p.nomorTelepon %></td>

                    <td class="text-center">
                      <a
                        href="/penyewa/<%= p.idPenyewa %>/edit"
                        class="btn btn-sm btn-outline-warning me-1"
                        >Edit</a
                      >
                      <form
                        action="/penyewa/<%= p.idPenyewa %>/delete"
                        method="post"
                        class="d-inline"
                      >
                        <button
                          type="submit"
                          class="btn btn-sm btn-outline-danger"
                        >
                          Hapus
                        </button>
                      </form>
                    </td>
                  </tr>
                  <% }) %> <% } %>
                </tbody>
              </table>

              <a href="/" class="btn btn-secondary mt-3"
                >&larr; Kembali ke Beranda</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
